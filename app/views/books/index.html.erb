<h1>Books</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="w-100 p-1">
      <%= cl_image_tag @book.photos.first.key, crop: :fill, class:"rounded-3", style: "width: 100%; height: 100%;" %>
    </div>
    <div class="w-100 p-1">
      <% if @book.photos.second %>
      <%= cl_image_tag @book.photos.second.key, crop: :fill, class:"rounded-3", style: "width: 100%; height: 100%;" %>
      <% end %>
    </div>
    <div class="w-100 p-1">
      <% if @book.photos.third %>
      <%= cl_image_tag @book.photos.third.key, crop: :fill,class:"rounded-3", style: "width: 100%; height: 100%;" %>
      <% end %>
    </div>
    <div class="col-6">
      <% @books.each do |b| %>

      <h3><%= b.title %></h3>
      <p><%= b.language %></p>
      <p><%= b.synopsis %></p>

      <% end %>
    </div>
  </div>
</div>
<%= link_to "Back", root_path, class: "btn btn-primary" %>
